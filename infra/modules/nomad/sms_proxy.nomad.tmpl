job "sms_proxy" {
  datacenters = ["dc1"]
  type = "service"
  group "sms_proxy" {
    count = "${environment == "prod" ? 3 : 1}"
    task "sms_proxy" {
      driver = "docker"
      config {
        image = "ghcr.io/${github_repository}/hardware-proxy:latest"
        ports = ["http", "metrics"]
        devices = [
          { host_path = "/dev/ttyUSB0", container_path = "/dev/ttyUSB0" },
          # ... up to /dev/ttyUSB49
        ]
      }
      env {
        REDIS_URL = "redis://redis:6379"
      }
      resources {
        cpu    = 500
        memory = 512
      }
    }
    network {
      port "http" { to = 8082 }
      port "metrics" { to = 9090 }
    }
  }
}